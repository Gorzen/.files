#!/bin/zsh

directory=$(pwd)
files=$(fzf -m)

i=""

i3-msg layout default

while read -r file; do
	if ! [ -z "$file" ]; then
		file="'$file'"
		file="$directory/$file"

		i3-msg exec xdg-open "$file"

		if [ -z "$i" ]; then
			i="Split"
			sleep 2
			i3-msg split toggle
		fi
	fi
done <<< "$files"

i3-msg layout tabbed

