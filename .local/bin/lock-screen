#!/bin/zsh

i3lock -e --blur=2 --pass-screen-keys --composite -k \
	--datestr="%A, %d %b %Y" \
	--datecolor=ffffffff \
	--timecolor=ffffffff \
	--veriftext="" \
	--wrongtext="" \
	--insidecolor=06060aff \
	--insidevercolor=06060aff \
	--insidewrongcolor=06060aff \
	--ringvercolor=cc9814ff \
	--ringwrongcolor=de351bff
