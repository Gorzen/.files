#!/bin/zsh

i3lock -e --blur=8 --indicator --pass-screen-keys --composite -k \
	--datestr="%A, %d %b %Y" \
	--datecolor=ffffffff \
	--timecolor=ffffffff \
	--noinputtext="" \
	--veriftext="" \
	--wrongtext="" \
	--ring-width 7 \
	--time-font=serif \
	--date-font=serif \
	--datesize=16 \
	--insidecolor=06060abb \
	--insidevercolor=06060abb \
	--insidewrongcolor=06060abb \
	--ringvercolor=cc9814ff \
	--ringwrongcolor=de351bff
