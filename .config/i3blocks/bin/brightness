#!/usr/bin/python
import subprocess

brightness = float(subprocess.Popen(
                   ["xbacklight", "-get"],
                   stdout=subprocess.PIPE)
                   .stdout.read())

label = ""

if brightness >= 75:
    label = "☀️"
elif brightness > 25:
    label = "🔆"
else:
    label ="🔅"

print("%s %.2f%%" % (label, brightness))
