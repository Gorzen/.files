bindsym $mod+b exec --no-startup-id "bookmarks; i3-msg 'workspace back_and_forth'; i3-msg 'workspace back_and_forth'"
bindsym $mod+Shift+b exec --no-startup-id "bookmarks-add; i3-msg 'workspace back_and_forth'; i3-msg 'workspace back_and_forth'"
bindsym $mod+Shift+s exec --no-startup-id spotify

