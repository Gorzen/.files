[user]
  name = Lucien Iseli
  email = lucien.iseli93@gmail.com
[alias]
  a = add
  b = branch
  ci = commit
  cl = clone
  co = checkout
  d = diff
  ds = diff --staged
  f = fetch
  h = help
  m = merge
  pl = pull
  ps = push
  pf = push --force-with-lease
  sh = show
  st = status -sb
  l = "log --pretty=tformat:'%C(auto)%h %d %C(#FFFF00 dim)(%ad)%Creset %C(bold #00F3D3)%an%Creset : %s' --date=relative --decorate --color"
  lg = l --graph
  lga = l --graph --all
  ls = l --shortstat
  li = l --graph --shortstat
  lia = li --all
[core]
  editor = vim
  pager = less
